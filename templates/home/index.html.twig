{% extends 'base.html.twig' %}

{% block title %}Fil d'actualit√©{% endblock %}

{% block body %}
    <div class="container p-4">
        <div class="row">
            <div class="col">
                {{ form(post_publish_form)}}
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                {% for post in posts %}
                    <div class="card mb-4">
                        <div class="card-body">
                            <a href="{{path('user_profil', {id: post.user.id})}}">
                                <strong>{{ post.user.firstname }} {{ post.user.lastname }}</strong>
                            </a>
                            <small>{{ post.publishedAt|date('d/m/Y') }}</small>
                            <p>{{ post.content }}</p>
                            {% include "partials/_comments_list.html.twig" %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
