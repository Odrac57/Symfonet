{% extends 'base.html.twig' %}

{% block title %}Les Posts !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>{{user.firstname}} {{user.lastname}}</h1>
                {% for post in user.posts %}
                    <div class="card">
                        <div class="card-body">
                            <small>{{ post.publishedAt|date('d/m/Y')}}</small>
                            <p>{{ post.content }}</p>
                        </div>
                    </div>
                    {% include "partials/_comments_list.html.twig" %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
